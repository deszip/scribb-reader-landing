<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
		background: #0a0a0a;
		color: #fafafa;
	}

	body {
		min-height: 100vh;
		overflow-x: hidden;
	}

	/* Hero Section */
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 2rem;
		overflow: hidden;
	}

	.hero-bg {
		position: absolute;
		inset: 0;
		z-index: 0;
		background:
			radial-gradient(ellipse at 30% 20%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
			radial-gradient(ellipse at 70% 60%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
			radial-gradient(ellipse at 50% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 40%),
			linear-gradient(180deg, #1a1a2e 0%, #0a0a0a 100%);
	}

	.hero-bg::after {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(
			to bottom,
			rgba(10, 10, 10, 0.3) 0%,
			rgba(10, 10, 10, 0.6) 50%,
			rgba(10, 10, 10, 1) 100%
		);
	}

	.hero-content {
		position: relative;
		z-index: 2;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	h1 {
		font-size: clamp(3rem, 10vw, 5rem);
		font-weight: 700;
		letter-spacing: -0.02em;
		margin-bottom: 1rem;
	}

	.beta-badge {
		display: inline-block;
		font-size: 0.3em;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		padding: 0.35em 0.7em;
		background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
		color: #fff;
		border-radius: 6px;
		vertical-align: super;
		margin-left: 0.2em;
	}

	h2 {
		font-size: clamp(1.5rem, 4vw, 2.25rem);
		font-weight: 600;
		letter-spacing: -0.01em;
		margin-bottom: 1rem;
	}

	.tagline {
		font-size: clamp(1.25rem, 4vw, 1.75rem);
		color: #a0a0a0;
		margin-bottom: 1.5rem;
	}

	.description {
		font-size: clamp(1rem, 3vw, 1.25rem);
		color: #707070;
		line-height: 1.6;
		margin-bottom: 2.5rem;
		max-width: 500px;
	}

	.cta {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		background: #fafafa;
		color: #0a0a0a;
		text-decoration: none;
		padding: 1rem 1.75rem;
		border-radius: 12px;
		font-size: 1rem;
		font-weight: 600;
		transition: transform 0.2s, opacity 0.2s;
	}

	.cta:hover {
		transform: scale(1.02);
		opacity: 0.9;
	}

	.apple-icon {
		width: 1.25rem;
		height: 1.25rem;
	}

	/* Feature Blocks */
	.feature-block {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		padding: 6rem 2rem;
		max-width: 1100px;
		margin: 0 auto;
	}

	.feature-block:nth-child(odd) {
		padding-left: 8%;
	}

	.feature-block:nth-child(even) {
		padding-right: 8%;
	}

	.feature-block--reverse {
		direction: rtl;
	}

	.feature-block--reverse > * {
		direction: ltr;
	}

	.feature-content {
		max-width: 420px;
	}

	.feature-block:not(.feature-block--reverse) .feature-content {
		justify-self: end;
		text-align: right;
	}

	.feature-block--reverse .feature-content {
		justify-self: start;
		text-align: left;
	}

	.feature-icon {
		width: 2.5rem;
		height: 2.5rem;
		margin-bottom: 1.25rem;
		color: #fafafa;
	}

	.feature-block:not(.feature-block--reverse) .feature-icon {
		margin-left: auto;
	}

	.feature-icon svg {
		width: 100%;
		height: 100%;
	}

	.feature-content p {
		color: #707070;
		line-height: 1.7;
		font-size: 1.1rem;
	}

	/* Device Mockups */
	.feature-devices {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: flex-end;
		min-height: 400px;
	}

	.device-ipad,
	.device-iphone {
		position: relative;
	}

	.device-ipad {
		width: 280px;
		z-index: 1;
		transform: translateX(40px);
	}

	.device-iphone {
		width: 160px;
		z-index: 2;
		transform: translateX(-40px);
		filter: drop-shadow(-20px 20px 40px rgba(0, 0, 0, 0.4));
	}

	.device-bezel {
		position: relative;
		width: 100%;
		height: auto;
		z-index: 2;
		display: block;
	}

	.device-screenshot {
		position: absolute;
		z-index: 1;
		object-fit: cover;
		object-position: top;
	}

	/* iPad screenshot positioning */
	.device-ipad .device-screenshot {
		top: 2.4%;
		left: 3.5%;
		width: 93%;
		height: 95.2%;
		border-radius: 8px;
	}

	/* iPhone screenshot positioning */
	.device-iphone .device-screenshot {
		top: 2.2%;
		left: 5.5%;
		width: 89%;
		height: 95.6%;
		border-radius: 18px;
	}

	.screenshot-placeholder {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
		color: #404040;
		font-size: 0.875rem;
	}

	.screenshot {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: top;
	}

	/* Footer */
	footer {
		padding: 6rem 2rem;
		text-align: center;
		margin-top: 4rem;
	}

	.footer-links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		margin-top: 2.5rem;
	}

	.footer-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.75rem;
		height: 2.75rem;
		color: #606060;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 50%;
		transition: color 0.2s, background 0.2s;
	}

	.footer-link:hover {
		color: #fafafa;
		background: rgba(255, 255, 255, 0.1);
	}

	.footer-link svg {
		width: 1.25rem;
		height: 1.25rem;
	}

	.copyright {
		margin-top: 2rem;
		color: #404040;
		font-size: 0.875rem;
	}

	/* Responsive */
	@media (max-width: 900px) {
		.feature-block {
			grid-template-columns: 1fr;
			gap: 3rem;
			padding: 5rem 2rem !important;
			text-align: center;
		}

		.feature-block--reverse {
			direction: ltr;
		}

		.feature-content {
			max-width: 500px;
			margin: 0 auto;
			justify-self: center !important;
			text-align: center !important;
		}

		.feature-icon {
			margin: 0 auto 1.25rem !important;
		}

		.feature-devices {
			order: -1;
			min-height: 320px;
		}

		.device-ipad {
			width: 220px;
			transform: translateX(30px);
		}

		.device-iphone {
			width: 130px;
			transform: translateX(-30px);
		}
	}

	@media (max-width: 480px) {
		.feature-block {
			padding: 4rem 1.5rem !important;
		}

		.feature-devices {
			min-height: 260px;
		}

		.device-ipad {
			width: 180px;
			transform: translateX(25px);
		}

		.device-iphone {
			width: 110px;
			transform: translateX(-25px);
		}

		h2 {
			font-size: 1.5rem;
		}

		.feature-content p {
			font-size: 1rem;
		}
	}

	/* Scroll Animations */
	.animate-on-scroll {
		opacity: 0;
		transform: translateY(40px);
		transition: opacity 0.8s ease-out, transform 0.8s ease-out;
	}

	.animate-on-scroll.is-visible {
		opacity: 1;
		transform: translateY(0);
	}

	.animate-on-scroll .feature-content {
		opacity: 0;
		transform: translateX(-30px);
		transition: opacity 0.6s ease-out 0.2s, transform 0.6s ease-out 0.2s;
	}

	.animate-on-scroll.feature-block--reverse .feature-content {
		transform: translateX(30px);
	}

	.animate-on-scroll.is-visible .feature-content {
		opacity: 1;
		transform: translateX(0);
	}

	.animate-on-scroll .feature-devices {
		opacity: 0;
		transform: translateX(30px);
		transition: opacity 0.6s ease-out 0.3s, transform 0.6s ease-out 0.3s;
	}

	.animate-on-scroll.feature-block--reverse .feature-devices {
		transform: translateX(-30px);
	}

	.animate-on-scroll.is-visible .feature-devices {
		opacity: 1;
		transform: translateX(0);
	}

	.animate-on-scroll .device-ipad {
		opacity: 0;
		transform: translateY(30px) translateX(40px);
		transition: opacity 0.6s ease-out 0.4s, transform 0.6s ease-out 0.4s;
	}

	.animate-on-scroll.is-visible .device-ipad {
		opacity: 1;
		transform: translateY(0) translateX(40px);
	}

	.animate-on-scroll .device-iphone {
		opacity: 0;
		transform: translateY(50px) translateX(-40px);
		transition: opacity 0.6s ease-out 0.5s, transform 0.6s ease-out 0.5s;
	}

	.animate-on-scroll.is-visible .device-iphone {
		opacity: 1;
		transform: translateY(0) translateX(-40px);
	}

	/* Hero animations */
	.hero-content {
		animation: fadeInUp 1s ease-out;
	}

	.hero-content h1 {
		animation: fadeInUp 0.8s ease-out 0.1s both;
	}

	.hero-content .tagline {
		animation: fadeInUp 0.8s ease-out 0.2s both;
	}

	.hero-content .description {
		animation: fadeInUp 0.8s ease-out 0.3s both;
	}

	.hero-content .cta {
		animation: fadeInUp 0.8s ease-out 0.4s both;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Respect reduced motion preference */
	@media (prefers-reduced-motion: reduce) {
		.animate-on-scroll,
		.animate-on-scroll .feature-content,
		.animate-on-scroll .feature-devices,
		.animate-on-scroll .device-ipad,
		.animate-on-scroll .device-iphone,
		.hero-content,
		.hero-content h1,
		.hero-content .tagline,
		.hero-content .description,
		.hero-content .cta {
			animation: none;
			opacity: 1;
			transform: none;
			transition: none;
		}

		.animate-on-scroll.is-visible .device-ipad {
			transform: translateX(40px);
		}

		.animate-on-scroll.is-visible .device-iphone {
			transform: translateX(-40px);
		}
	}
</style>

<script>
	const observerOptions = {
		root: null,
		rootMargin: '0px 0px -100px 0px',
		threshold: 0.1
	};

	const observer = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('is-visible');
			}
		});
	}, observerOptions);

	document.querySelectorAll('.animate-on-scroll').forEach(el => {
		observer.observe(el);
	});
</script>
