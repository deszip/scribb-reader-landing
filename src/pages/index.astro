<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
		background: #0a0a0a;
		color: #fafafa;
	}

	body {
		min-height: 100vh;
	}

	/* Hero Section */
	.hero {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 2rem;
	}

	h1 {
		font-size: clamp(3rem, 10vw, 5rem);
		font-weight: 700;
		letter-spacing: -0.02em;
		margin-bottom: 1rem;
	}

	h2 {
		font-size: clamp(1.75rem, 5vw, 2.5rem);
		font-weight: 600;
		letter-spacing: -0.01em;
		margin-bottom: 3rem;
	}

	.tagline {
		font-size: clamp(1.25rem, 4vw, 1.75rem);
		color: #a0a0a0;
		margin-bottom: 1.5rem;
	}

	.description {
		font-size: clamp(1rem, 3vw, 1.25rem);
		color: #707070;
		line-height: 1.6;
		margin-bottom: 2.5rem;
		max-width: 500px;
	}

	.cta {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		background: #fafafa;
		color: #0a0a0a;
		text-decoration: none;
		padding: 1rem 1.75rem;
		border-radius: 12px;
		font-size: 1rem;
		font-weight: 600;
		transition: transform 0.2s, opacity 0.2s;
	}

	.cta:hover {
		transform: scale(1.02);
		opacity: 0.9;
	}

	.apple-icon {
		width: 1.25rem;
		height: 1.25rem;
	}

	/* Features Section */
	.features {
		padding: 6rem 2rem;
		text-align: center;
		background: #111;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 3rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.feature {
		padding: 2rem;
	}

	.feature-icon {
		width: 3rem;
		height: 3rem;
		margin: 0 auto 1.5rem;
		color: #fafafa;
	}

	.feature-icon svg {
		width: 100%;
		height: 100%;
	}

	.feature h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
	}

	.feature p {
		color: #707070;
		line-height: 1.6;
		font-size: 1rem;
	}

	/* Screenshots Section */
	.screenshots {
		padding: 6rem 2rem;
		text-align: center;
		overflow: hidden;
	}

	.screenshots-container {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		max-width: 900px;
		margin: 0 auto;
	}

	.phone-frame {
		flex-shrink: 0;
		width: 200px;
		background: #1a1a1a;
		border-radius: 36px;
		padding: 12px;
		box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
		opacity: 0.7;
		transform: scale(0.9);
		transition: transform 0.3s, opacity 0.3s;
	}

	.phone-frame.phone-featured {
		width: 240px;
		opacity: 1;
		transform: scale(1);
	}

	.phone-screen {
		background: #0a0a0a;
		border-radius: 24px;
		aspect-ratio: 9 / 19.5;
		overflow: hidden;
	}

	.screenshot-placeholder {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%);
		color: #404040;
		font-size: 0.875rem;
	}

	/* Footer */
	footer {
		padding: 4rem 2rem;
		text-align: center;
		background: #111;
	}

	.copyright {
		margin-top: 2rem;
		color: #404040;
		font-size: 0.875rem;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.screenshots-container {
			gap: 1rem;
		}

		.phone-frame {
			width: 140px;
		}

		.phone-frame.phone-featured {
			width: 180px;
		}
	}

	@media (max-width: 540px) {
		.phone-frame:not(.phone-featured) {
			display: none;
		}

		.phone-frame.phone-featured {
			width: 220px;
		}
	}
</style>
